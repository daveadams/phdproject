<table class="session-list" cellspacing="0">
<tr>
  <th>&nbsp;</th>
  <th>Session Name</th>
  <% @groups.each do |g| %>
    <th><%= g.shortname %></th>
  <% end %>
  <th>Total</th>
  <th>&nbsp;</th>
</tr>
<% if @active_session %>
  <tr class="active-session">
    <td><b>ACTIVE</b></td>
    <td><%= link_to(h(@active_session.name), :action => :status) %></td>
    <%= render(:partial => "session_participants",
               :object => @active_session.participants) %>
    <td><%= link_to("status", :action => :status) %></td>
  </tr>
<% end %>
<% @sessions.each do |session| %>
  <tr class="inactive-session">
    <td>
      <% if session.unseen_participants.count > 0 and !@active_session %>
        <%= link_to("activate",
                    { :action => :activate_session, :id => session.id },
                    :method => :post,
                    :confirm => "Do you want to activate '#{session.name}'?") %>
      <% else %>
        &nbsp;
      <% end %>
    </td>
    <td><%=h session.name %></td>
    <%= render(:partial => "session_participants",
               :object => session.participants) %>
    <td>
      <%= link_to("add", :action => :add_participants, :id => session.id) %>
      <% if session.current_participants.count == 0 %>
        <%= link_to("delete",
                    { :action => :delete_session, :id => session.id },
                    :method => :post,
                    :confirm => "Are you sure you want to delete '#{session.name}'?") %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<hr />

<h2>Control Panel</h2>
<div id="control-panel">
  <% form_tag(:action => :add_session) do %>
    <b><%= label_tag("name", "New Session Name") %></b>
    <%= text_field_tag("name") %>
    <%= submit_tag("Create") %>
  <% end %>
</div>
