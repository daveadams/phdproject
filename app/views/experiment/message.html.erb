<html>
  <head>
    <meta http-equiv="Expires" content="0" />
    <title>Experiment: Message</title>
    <%= stylesheet_link_tag("default", :media => :all) %>
    <%= javascript_include_tag :defaults %>
  </head>

  <body>
    <div class="content">
      <div class="reminder-message">
        <p>
          <b>REMINDER:</b> <%= rule_filter(@message) %>
        </p>

        <div style="text-align: right">
          <span id="please-wait">
            <%= image_tag("wait.gif", :align => "middle") %> Please wait...
          </span>
          <span id="proceed-button" style="display:none;">
            <%= link_button("Proceed", :action => "report") %>
          </span>
        </div>
      </div>
    </div>

    <script language="javascript">
        function enableProceedButton()
        {
            $('please-wait').hide();
            $('proceed-button').show();
        }
        setTimeout('enableProceedButton();',15000);
    </script>
  </body>
</html>
