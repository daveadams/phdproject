<html>
  <head>
    <meta http-equiv="Expires" content="0" />
    <title><%=h get_text("title") %></title>
    <%= stylesheet_link_tag("default", :media => :all) %>
  </head>

  <body>
    <div class="content">
      <h1><%=h get_text("title") %></h1>
      <% if flash[:error] %>
        <div class="error"><%= flash[:error] %></div>
      <% end %>

      <%= yield :layout %>

    </div>
  </body>
</html>
