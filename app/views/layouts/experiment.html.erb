<html>
  <head>
    <meta http-equiv="Expires" content="0" />
    <title>Experiment: <%=h @page_title %></title>
    <%= stylesheet_link_tag("default", :media => :all) %>
  </head>

  <body>
    <div class="content">
      <h1><%=h @page_title %></h1>
      <% if flash[:error] %>
        <div class="error"><%= flash[:error] %></div>
      <% end %>

      <%= yield :layout %>

      <% if @display_bank %>
        <span class="bank">$<%= bank_balance %></span>
      <% end %>
    </div>
  </body>
</html>
